<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--TopBar-->
    <RelativeLayout
        android:id="@+id/new_help_request_page_two_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:background="@color/mainlyColor"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/new_help_request_page_back_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="New Help Request"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="italic"/>

    </RelativeLayout>
    <ScrollView
        android:id="@+id/new_event_one_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_help_request_page_two_top_bar"
        android:paddingBottom="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/new_help_request_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_landmark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/position_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pasirinkite lokacija kuria uzregistruosit"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="25sp" />


                </LinearLayout>

            </LinearLayout>








            </LinearLayout>

    </ScrollView>




    <Button
        android:id="@+id/new_help_request_button_finish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/mainlyColor"
        android:padding="20dp"
        android:textStyle="italic"
        android:text="Sukurti pagalbos prasyma"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>