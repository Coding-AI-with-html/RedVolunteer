<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/Blocked_profile_photo"
        android:src="@drawable/ic_default_profile"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vardas"
        android:textColor="@color/black"
        android:id="@+id/BlockedName"
        android:layout_toRightOf="@id/Blocked_profile_photo"
        android:layout_toEndOf="@id/Blocked_profile_photo"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:textSize="19sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="180dp"
        android:layout_toEndOf="@id/BlockedName"
        android:layout_toRightOf="@id/BlockedName"
        android:text="Atblokuoti"
        android:textColor="@color/black"
        android:textSize="20sp" />

</RelativeLayout>