<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MessageActivity"
    android:background="@color/mainColorRed"
    android:id="@+id/message_ac_layout">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topBarMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainlyColor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/AppTheme">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/arrow_back"
                android:layout_marginRight="10dp"
                android:id="@+id/go_back_message"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_photo_msg_user"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/name_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Layout for blocking user  -->

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <View
        android:layout_below="@id/bar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_thing"
        android:layout_marginBottom="16sp"
        android:background="@drawable/chatting_activity_main_view"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_viewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_thing"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/bar_layout" />

    <RelativeLayout
        android:id="@+id/bottom_thing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/text_send_field"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_16sp"
            android:layout_marginLeft="@dimen/_16sp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="@dimen/_8sp"
            android:layout_marginBottom="@dimen/_12sp"
            android:background="@drawable/message_bottom_layout"
            android:hint="Jusu zinute"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:paddingStart="@dimen/_16sp"
            android:paddingEnd="@dimen/_16sp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_send_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:foreground="@drawable/ic_send_message"
            android:foregroundTint="@color/white"
            android:foregroundGravity="center"
            android:layout_marginEnd="1dp"
            app:borderWidth="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/mainColorRed"
            android:scaleType="center" />
    </RelativeLayout>


    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/blocked_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/mainColorRed"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/blocked_user_messages"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/unblocked_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/mainColorRed"
        android:padding="5dp">

        <TextView
            android:id="@+id/blocking_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/looking_to_blocked_user_chat"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/unblock_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/blocking_message"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="@dimen/_16sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="@dimen/_8sp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/unblock_button"
            android:padding="10dp"
            android:text="@string/unblock_button"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/something_wrong_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/unblock_button"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="@dimen/_16sp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="@dimen/_8sp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/unblock_button"
            android:padding="10dp"
            android:text="@string/something_wrong_button"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>